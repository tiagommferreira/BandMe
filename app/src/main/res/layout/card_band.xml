<?xml version="1.0" encoding="utf-8"?>

<ui.band.me.views.BandCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/MainLayout">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardView"
        style="@style/MainCardView"
        card_view:cardCornerRadius="@dimen/card_corner_radius">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:background="@drawable/custom_bg">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:adjustViewBounds="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:scaleType="centerCrop"
                android:background="@drawable/abc_list_pressed_holo_light"
                android:id="@+id/imageView"/>

            <TextView
                style="@style/CardTitle"
                android:layout_alignBottom="@+id/imageView"
                android:id="@+id/titleTextView"
                tools:text="Title"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/descriptionTextView"
                android:textColor="@color/description_color"
                android:padding="@dimen/big_padding"
                android:textSize="@dimen/description_size"
                android:layout_below="@+id/imageView"
                tools:text="Test description"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/left_text_button"
                android:layout_below="@+id/descriptionTextView"
                android:layout_marginTop="@dimen/big_padding"
                android:layout_marginBottom="@dimen/small_padding"
                android:paddingLeft="@dimen/big_padding"
                android:paddingRight="@dimen/big_padding"
                android:paddingBottom="@dimen/small_padding"
                style="@style/LeftButtonBaseStyle"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/right_text_button"
                android:layout_toRightOf="@+id/left_text_button"
                android:layout_alignBottom="@+id/left_text_button"
                android:paddingLeft="@dimen/small_padding"
                android:paddingBottom="@dimen/small_padding"
                style="@style/RightButtonBaseStyle"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</ui.band.me.views.BandCardView>